<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client"
	>
	
	<m:MaterialRow>
		<ma:window.MaterialWindow ui:field="window" width="70%" title="Event">
			<m:MaterialPanel padding="32" textAlign="CENTER">
				<m:MaterialTextBox placeholder="Title" ui:field="title" iconType="EVENT" />
				<m:MaterialTextBox placeholder="Description" ui:field="description" iconType="DESCRIPTION" />
				<m:MaterialCheckBox text="All day" ui:field="allDay"/>
				<m:MaterialRow>
					<m:MaterialColumn grid="s6">
						<m:MaterialDatePicker ui:field="startDate" placeholder="Start Date" />
					</m:MaterialColumn>
					<m:MaterialColumn grid="s6">
						<ma:timepicker.MaterialTimePicker ui:field="startTime" placeholder="Start Time" />
					</m:MaterialColumn>
				</m:MaterialRow>
				<m:MaterialRow>
					<m:MaterialColumn grid="s6">
						<m:MaterialDatePicker ui:field="endDate" placeholder="End Date" />
					</m:MaterialColumn>
					<m:MaterialColumn grid="s6">
						<ma:timepicker.MaterialTimePicker ui:field="endTime" placeholder="End Time" />
					</m:MaterialColumn>
				</m:MaterialRow>
				<m:MaterialButton ui:field="cancelButton"/>
				<m:MaterialButton ui:field="saveButton" />
			</m:MaterialPanel>
		</ma:window.MaterialWindow>
	</m:MaterialRow>

</ui:UiBinder> 